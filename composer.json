{
    "name": "bartacus/platformsh-bundle",
    "type": "symfony-bundle",
    "description": "Support bundle for using Platform.sh together with Bartacus",
    "keywords": [ "typo3", "symfony", "framework", "integration", "platform.sh" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Patrik Karisch",
            "email": "patrik@karisch.guru"
        },
        {
            "name": "pixelart GmbH",
            "homepage": "https://www.pixelart.at"
        }
    ],
    "require": {
        "php": "^7.1",
        "cweagans/composer-patches": "^1.6.2",
        "symfony/symfony": "^3.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.5"
    },
    "conflict": {
        "helhum/typo3-console": "<4.7.0 >4.7.0"
    },
    "autoload": {
        "psr-4": {
            "Bartacus\\Bundle\\PlatformshBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "patches": {
            "helhum/typo3-console": {
                "Don't execute install:generatepackagestates during setup on platform.sh": "https://github.com/Bartacus/TYPO3-Console/compare/4.7.0...patch/4.7.0/platformsh-installation.patch"
            }
        }
    }
}
